{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A KCM cluster docker-hosted-cp template",
  "type": "object",
  "properties": {
    "clusterAnnotations": {
      "type": "object"
    },
    "clusterLabels": {
      "type": "object"
    },
    "clusterNetwork": {
      "type": "object",
      "properties": {
        "pods": {
          "type": "object",
          "properties": {
            "cidrBlocks": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "serviceDomain": {
          "type": "string"
        },
        "services": {
          "type": "object",
          "properties": {
            "cidrBlocks": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "k0s": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        }
      }
    },
    "k0smotron": {
      "type": "object",
      "properties": {
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            }
          }
        }
      }
    },
    "workersNumber": {
      "type": "integer"
    }
  }
}
