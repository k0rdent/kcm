{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A KCM cluster vsphere-standalone-cp template",
  "type": "object",
  "properties": {
    "clusterAnnotations": {
      "type": "object"
    },
    "clusterIdentity": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "clusterLabels": {
      "type": "object"
    },
    "clusterNetwork": {
      "type": "object",
      "properties": {
        "pods": {
          "type": "object",
          "properties": {
            "cidrBlocks": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "services": {
          "type": "object",
          "properties": {
            "cidrBlocks": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "controlPlane": {
      "type": "object",
      "properties": {
        "cpus": {
          "type": "integer"
        },
        "memory": {
          "type": "integer"
        },
        "network": {
          "type": "string"
        },
        "rootVolumeSize": {
          "type": "integer"
        },
        "ssh": {
          "type": "object",
          "properties": {
            "publicKey": {
              "type": "string"
            },
            "user": {
              "type": "string"
            }
          }
        },
        "vmTemplate": {
          "type": "string"
        }
      }
    },
    "controlPlaneEndpointIP": {
      "type": "string"
    },
    "controlPlaneNumber": {
      "type": "integer"
    },
    "ipamEnabled": {
      "type": "boolean"
    },
    "k0s": {
      "type": "object",
      "properties": {
        "api": {
          "type": "object",
          "properties": {
            "extraArgs": {
              "type": "object"
            }
          }
        },
        "version": {
          "type": "string"
        }
      }
    },
    "nameservers": {
      "type": "array"
    },
    "vsphere": {
      "type": "object",
      "properties": {
        "datacenter": {
          "type": "string"
        },
        "datastore": {
          "type": "string"
        },
        "folder": {
          "type": "string"
        },
        "resourcePool": {
          "type": "string"
        },
        "server": {
          "type": "string"
        },
        "thumbprint": {
          "type": "string"
        }
      }
    },
    "worker": {
      "type": "object",
      "properties": {
        "cpus": {
          "type": "integer"
        },
        "memory": {
          "type": "integer"
        },
        "network": {
          "type": "string"
        },
        "rootVolumeSize": {
          "type": "integer"
        },
        "ssh": {
          "type": "object",
          "properties": {
            "publicKey": {
              "type": "string"
            },
            "user": {
              "type": "string"
            }
          }
        },
        "vmTemplate": {
          "type": "string"
        }
      }
    },
    "workersNumber": {
      "type": "integer"
    }
  }
}
