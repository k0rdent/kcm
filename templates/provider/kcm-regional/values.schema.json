{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A KCM provider kcm-regional template",
  "type": "object",
  "properties": {
    "cert-manager": {
      "type": "object",
      "properties": {
        "crds": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "keep": {
              "type": "boolean"
            }
          }
        },
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "cluster-api-operator": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "resources": {
          "type": "object",
          "properties": {
            "manager": {
              "type": "object",
              "properties": {
                "limits": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string"
                    },
                    "memory": {
                      "type": "string"
                    }
                  }
                },
                "requests": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string"
                    },
                    "memory": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "velero": {
      "type": "object",
      "properties": {
        "backupsEnabled": {
          "type": "boolean"
        },
        "cleanUpCRDs": {
          "type": "boolean"
        },
        "credentials": {
          "type": "object",
          "properties": {
            "useSecret": {
              "type": "boolean"
            }
          }
        },
        "deployNodeAgent": {
          "type": "boolean"
        },
        "enabled": {
          "type": "boolean"
        },
        "fullnameOverride": {
          "type": "string"
        },
        "metrics": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        },
        "snapshotsEnabled": {
          "type": "boolean"
        },
        "upgradeCRDs": {
          "type": "boolean"
        }
      }
    }
  }
}
